<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="Plans" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project.WorkPlaceController">
    <VBox alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" spacing="10">
        <Label style="-fx-font-size: 2em;" text="Ваши планы" /> <!-- Заголовок для списка планов -->
        <ScrollPane fx:id="plansScrollPane" prefHeight="400" prefWidth="600"> <!-- Прокручиваемая панель для отображения планов -->
            <VBox id="Sortedplans" fx:id="plansContainer" alignment="TOP_LEFT" spacing="10" /> <!-- Контейнер для отображения карточек планов -->
        </ScrollPane>
    </VBox>

    <VBox alignment="TOP_LEFT" layoutX="620.0" layoutY="10.0" spacing="10">
        <Label style="-fx-font-size: 2em;" text="Добавить план" /> <!-- Заголовок для формы добавления плана -->
        <DatePicker fx:id="datePicker" /> <!-- Элемент для выбора даты -->
        <TextField fx:id="timeTextField" promptText="Введите время..." /> <!-- Поле для ввода времени -->
        <TextArea fx:id="plansTextArea" prefHeight="100.0" promptText="Введите ваши планы..." /> <!-- Область для ввода текста плана -->
        <Button fx:id="addPlanButton" onAction="#handleAddPlan" text="Добавить план" /> <!-- Кнопка для добавления плана -->
    </VBox>
</AnchorPane>
