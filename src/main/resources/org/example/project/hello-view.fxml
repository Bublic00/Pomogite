<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project.MenuController" style="-fx-background-color: #6495ED;" prefWidth="800" prefHeight="600">

    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <children>
            <Label style="-fx-font-size: 15em;" text="Vacuole" textAlignment="CENTER" textFill="#81efc7">
                <font>
                    <Font name="Maiandra GD" size="110.0" />
                </font>
            </Label>
            <Button onAction="#ClickWorkPlace" prefHeight="30.0" prefWidth="290.0" style="-fx-background-color: #a8e7d0; -fx-font-size: 2em;" text="Начать планирование">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onAction="#openSettings" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #a8e7d0; -fx-font-size: 2em;" text="Настройки">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onAction="#ClickFeedBack" prefHeight="30.0" prefWidth="234.0" style="-fx-background-color: #a8e7d0; -fx-font-size: 2em;" text="Обратная связь">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onAction="#ExitButtonClick" prefHeight="30.0" prefWidth="140.0" style="-fx-background-color: #a8e7d0; -fx-font-size: 2em;" text="Выход">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </children>
    </VBox>
</AnchorPane>
